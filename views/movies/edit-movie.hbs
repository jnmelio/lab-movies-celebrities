<h2>Edit a movie</h2>

<form action="/movies/{{data._id}}/edit" method="POST">

    <label for="title" >Title</label>
    <input type="text" name="title" value="{{data.title}}">

    <label for="title" >Genre</label>
    <input type="text" name="genre" value="{{data.genre}}">

    <label for="title" >Plot</label>
    <input type="text" name="plot" value="{{data.plot}}">

    <label for="title">Cast</label>
    <select name="cast" id="cast" multiple>
        {{#each allCelebrities}}
        <option value={{this._id}}>{{this.name}}</option>
        {{/each}}
    </select>

    <button type="submit">SUBMIT</button>

</form>